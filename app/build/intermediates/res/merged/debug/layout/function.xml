<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4285F4"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/function_interface"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="27dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/function_license_plate_number" />

                    <TextView
                        android:id="@+id/function_license_plate_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/function_license_plate_number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="@string/function_plate_type" />

                    <TextView
                        android:id="@+id/function_plate_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/function_plate_type" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检验流水号:" />

                    <TextView
                        android:id="@+id/function_jylsh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="检验流水号" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp" >

                        <Button
                            android:id="@+id/inspection_test"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="@string/inspection_test"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/photo_collection"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="照片补录"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp" >

                        <Button
                            android:id="@+id/dynamic_chassis"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="@string/dynamic_chassis"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/chassis_inspection"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="@string/chassis_inspection"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lsfrist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp" >

                        <Button
                            android:id="@+id/road_test_to_move"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="@string/brake_road_test"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/slope_of_brake"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="驻坡制动"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp" >

                        <Button
                            android:id="@+id/online_scheduling"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="上线调度"
                            android:textSize="20dp" />

                        <Button
                            android:id="@+id/menu_display"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/button8_style"
                            android:enabled="true"
                            android:onClick="doClick"
                            android:text="菜单显示"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lstwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp" >

                        <Button
                            android:id="@+id/back_office"
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="路试驻坡制动"
                            android:textSize="20dp" />

                        <Button
                            android:layout_width="99dp"
                            android:layout_height="99dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/button8_style"
                            android:enabled="false"
                            android:onClick="doClick"
                            android:text="菜单显示"
                            android:textSize="20dp"
                            android:visibility="invisible" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/navdrawer"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#D1EEEE"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:drawSelectorOnTop="false" >
    </ListView>

</android.support.v4.widget.DrawerLayout>