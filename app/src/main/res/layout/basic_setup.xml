<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4285F4"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:text="基本默认设置"
                android:textColor="#FFFFFF"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="外检通道号是否可选:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/WJType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/wjtck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="弹出对话框可选"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/wjbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认为1，不可选"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="动态底盘通道号是否可选:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/DTType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/dttck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="弹出对话框可选"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/dtbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="默认为1，不可选"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="底盘通道号是否可选:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/DPType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/dptck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="弹出对话框可选"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/dpbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="默认为参数设置里的检测线代号，不可选"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="数据上传选择方式:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/DATAType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/datatck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入框形式"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/databt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="选择框形式"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="路试操作选择方式:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/LSType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/lstck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="路试驻坡制动不分开操作"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/lsbt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="路试驻坡制动分开操作"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="相机是否循环拍照:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/XJType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/xjs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="是"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/xjf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="照片上传模式："
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/PhotoType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/Photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="手动一张张上传"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/Photof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="整体放在后台上传"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="是否开启时间调控:"
                android:textSize="20dp" />

            <RadioGroup
                android:id="@+id/TimeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <RadioButton
                    android:id="@+id/Times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是"
                    android:textSize="15dp" >
                </RadioButton>

                <RadioButton
                    android:id="@+id/Timef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="否"
                    android:textSize="15dp" >
                </RadioButton>
            </RadioGroup>

            <Button
                android:id="@+id/buttonSettingOK"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_style"
                android:text="保存修改"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>